<!--
if plagiarism_checker_assignment_submission doesn't exist, you won't be able to come to this page
else if plagiarism_checker_comparison has no records, say "yay! no one cheated!"
else show records
-->

<% if @PlagiarismCheckerComparisons.nil? %>
    <div class="text-center">
      "There are no cheaters in this assignment! Hooray!"
    </div>
<% else %>

    <div class="container"><p></p>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Plagiarism Checker Report</th>
          <th>Similarity</th>
          <th>Submission 1</th>
          <th>Team 1</th>
          <th>Submission 2</th>
          <th>Team 2</th>
        </tr>
        </thead>
        <% @PlagiarismCheckerComparisons.each do |pcc| %>
            <tr>
              <td><%= link_to pcc.similarity_percentage + "%", pcc.similarity_link %></td>
              <td><%= pcc.file1_name%></td>

              <%= team = Team.find(pcc.file1_team) %>
              <% if team.nil? %>
                  <td>Unknown</td>
              <% else %>
                  <td><%= team.name %></td>
              <% end %>

              <td><%= pcc.file2_name%></td>

              <%= team = Team.find(pcc.file2_team) %>
              <% if team.nil? %>
                  <td>Unknown</td>
              <% else %>
                  <td><%= team.name %></td>
              <% end %>
            </tr>
        <% end %>
      </table>
    </div>
<% end %>
