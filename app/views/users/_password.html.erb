<% new_user ||= false %>
<% request_user ||= false %>
<%if !request_user%>
<p class="form-inline"><label for="password">Password: </label>
  <%= password_field 'user', 'password', class: "form-control width-250" %></p>


<p class="form-inline"><label for="password_confirmation">Confirm password: </label>
  <%= password_field 'user', 'password_confirmation', class: "form-control width-250" %></p>
  <%= "(leave password blank to auto-generate; it will be sent in their welcome email)" if new_user %>
<% end %>