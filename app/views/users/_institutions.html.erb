<script>
$(document).ready(function(){
  $('#user_institution_id').change(function() {
    if(this.value == "") {
      $('#institution_name').show();
    }else{
      $('#institution_name').hide();
    }
  });
});
</script>
<p><label for="user_institutions">Institution</label><br/>
    <%= collection_select('user',:institution_id, Institution.all, :id, :name, {include_blank: 'Other'}) %></p>
    <%= text_field 'institution', 'name' %></p>
